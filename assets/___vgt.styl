.vgt-table
  // table-layout: fixed;
  width: 100%;
  td, th
    border-right 1px solid #dee2e6
    &:last-child
      border-right 0
  
  // td
  //   overflow scroll
  th
    user-select none
    &:hover
      color #000
    // span:before
    //   content "⇅" // ⬍ ⇅ 
    // &:hover
    //   border-bottom-color #C7CEDE
  // td
  //   width: 10%;
