    tr
      &:nth-child(even)
        background ghostwhite


.sortable
  padding-right: 1.4em;
  cursor pointer
.sorting
  // background #EEE
  border-bottom-color #3abaae
  position relative
  &:after
    color #CCC
    position absolute
    // content "⇅ "
  &-desc
    &:after
      content " ⬆ "
  &-asc
    &:after
      content " ⬇ "





// FOOTER
.vgt-wrap__footer
  display flex
  justify-content space-between
  background #f7f7f7
  padding .5em 1em


.footer__row-count__select
  width 5em
.footer__row-count
  margin-left 1em

.footer__navigation
  margin-left 1em
  display flex
  align-items center
  &__info
    margin 0 1em
  &__page-info
    padding 0 1em
  &__page-btn
    outline none
    text-decoration none
    padding 0 1em
    height 2em
    border-radius .3em
    display inline-flex
    align-items center
    justify-content center
    // box-shadow 0 2px 5px 0 rgba(0, 0, 0, .16), 0 2px 10px 0 rgba(0, 0, 0, .12)
    cursor pointer
    user-select none
    transition background .3s
    background #EEE //#3498db
    // &:active
    // transform translateY(2px)
    border 1px solid transparent
    &:hover
      border-color #CCC